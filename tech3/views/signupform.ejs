    <form action="/signupform" method="post" >
        <div class="signupcontainer1">
            <h1>Sign Up</h1>
            <p>Please fill in this form to crete account.</p>
            <hr>
            <label for="uname" id="uname">
                <b>Username</b>
            </label>
            <input type="text" placeholder="Enter Username" name="uname" required>
            <label for="email" id="email">
                <b>email</b>
            </label>
            <input type="text" placeholder="Enter Email" name="email" required>
            <label for="password" id="password">
                <b>Password</b>
            </label>
            <input type="text" placeholder="Enter Password" name="password" required>
            <label for="password2">
                <b>Repeat Password</b>
            </label>
            <input type="text" placeholder="Repeat Password" name="password2" required>
            <label><input type="checkbox"checked="checked" name="remember" >Remember me</label>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a></p>
            <div class="clearfix">
                <a href="signupform.ejs">
                    <button type="button" class="cancelbtn">Cancel</button>
                </a>
                <button type="submit" class="signupbtn2">Sign Up</button>
            </div>
        </div>
    </form>

